---
import Menu from "./Menu.astro";
const { title, date } = Astro.props;
---

<header>
  <div class="menu">
    <Menu />
  </div>
  <div class="banner"><slot /></div>

  <div class="text">
    <h1>{title}</h1>
    <h2>{date}</h2>
  </div>
  <div class="big_logo">
    <img src="watermark.svg" alt="logo" />
  </div>
</header>

<style>
  header {
    display: grid;
    grid-template-columns: 4fr 1fr;
    grid-template-rows: auto;
  }
  .banner {
    grid-row: 1/4;
    grid-column: 1/3;
  }
  .text {
    grid-row: 2/3;
    grid-column: 1/2;
    margin-left: 1rem;
  }
  .menu {
    grid-row: 1/2;
    grid-column: 1/3;
    z-index: 5;
  }
  .big_logo {
    grid-row: 1/4;
    grid-column: 2/3;
  }
  img {
    width: 30vw;
  }
</style>
