---
const { title } = Astro.props;
---

<div class="button_container">
  <div class="center">
    <button class="button_line"><span>{title}</span></button>
  </div>
</div>

<style>
  button {
    display: grid;
    width: 100%;
    grid-template-columns: 1fr auto 1fr;
    border: none;
    background: transparent;
    align-items: center;
    gap: 1rem;
  }
  span {
    color: white;
    background-color: rgba(253, 132, 32, 1);
    border: 2px solid rgba(253, 132, 32, 1);
    border-radius: 30px;
    padding: 20px 35px;
    font-family: dosis;
    font-weight: bolder;
    cursor: pointer;
    position: relative;
    font-size: 1.2rem;
  }
  button:before {
    content: "";
    display: block;
    width: 100%;
    height: 0.5px;

    background: rgba(253, 132, 32, 1);
  }

  button:after {
    content: "";
    display: block;
    width: 100%;
    height: 0.5px;

    background: rgba(253, 132, 32, 1);
  }

  span:hover {
    background-color: red;
  }

  .button_container {
    padding-bottom: 20px;
  }
