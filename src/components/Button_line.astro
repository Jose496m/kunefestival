---
const { title } = Astro.props;
---

<div class="button_container">
  <div class="center">
    <button class="button_line">{title}</button>
  </div>
</div>

<style>
  button {
    color: white;
    background-color: rgba(253, 132, 32, 1);
    border: 2px solid rgba(253, 132, 32, 1);
    border-radius: 30px;
    padding: 20px 35px;
    font-family: dosis;
    font-weight: bold;
    cursor: pointer;
    position: relative;
    font-size: 1rem;
  }

  .center {
    display: flex;
    justify-content: center;
    margin: 20px;
  }

  button:hover {
    color: rgba(253, 132, 32, 1);
    background-color: white;
    border: 2px solid rgba(253, 132, 32, 1);
  }

  button:before {
    content: "";
    display: block;
    width: 40vw;
    height: 0.5px;
    position: absolute;
    background: rgba(253, 132, 32, 1);
    right: 161px;
    top: 50%;
  }

  button:after {
    content: "";
    display: block;
    width: 40vw;
    height: 0.5px;
    position: absolute;
    background: rgba(253, 132, 32, 1);
    left: 161px;
    top: 50%;
  }
</style>
