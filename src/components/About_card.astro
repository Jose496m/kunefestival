---
const { title } = Astro.props;
const { text, text1, text2 } = Astro.props;
---

<section>
  <h3>{title}</h3>
  <p>{text}</p>
  <p>{text1}</p>
  <p>{text2}</p>
  <slot />
</section>

<style>
  h3 {
    color: white;
    margin: 5%;
  }

  p {
    color: white;
    font-size: 16px;
    line-height: 23px;
    margin-left: 30px;
    margin-right: 30px;
    margin-bottom: 20px;
  }

  @media (max-width: 800px) {
    h3 {
      font-size: 25px;
    }
    p {
    }
  }
</style>
