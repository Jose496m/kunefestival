---
const { title } = Astro.props;
---

<section>
  <slot />
  <div class="text">
    <h3>{title}</h3>
    <span>&rarr;</span>
  </div>
</section>
<style>
  section {
    display: grid;
    grid-template-columns: auto;
    grid-template-rows: auto;
    width: 100%;
  }
  .text {
    justify-self: center;
    align-self: start;
    color: white;
    transform: translate(0, -20px);
  }
  span {
    font-size: 2rem;
  }

  .text:hover {
    color: var(--brand-color);
  }
</style>
