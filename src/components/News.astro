---
const { title, text } = Astro.props;
---

<section>
  <slot />
  <h3>{title}</h3>
  <p>{text}</p>
  <span>&rarr;</span>
</section>

<style>
  section {
    display: flexbox;
    flex-direction: row;
  }

  h3,
  p {
    color: white;
  }
  span {
    color: white;
    justify-self: right;
  }

  img {
    max-width: 100%;
    height: auto;
  }
</style>
