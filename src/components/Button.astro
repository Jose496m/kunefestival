<div class="button_container">
  <div class="center">
    <a href={link}><span>{title}</span></a>
  </div>
</div>

<style>
  a {
    display: grid;
    width: 100%;
    grid-template-columns: 1fr auto 1fr;
    border: none;
    background: transparent;
    align-items: center;
    gap: 1rem;
    text-decoration: none;
  }
  span {
    color: white;
    background-color: rgba(32, 49, 65, 1);
    border: 2px solid white;
    border-radius: 30px;
    padding: 20px 35px;
    font-family: dosis;
    font-weight: bolder;
    cursor: pointer;
    position: relative;
    font-size: 1.2rem;
  }
  a:before {
    content: "";
    display: block;
    width: 100%;
    height: 0.5px;

    background: rgba(253, 132, 32, 1);
  }

  a:after {
    content: "";
    display: block;
    width: 100%;
    height: 0.5px;

    background: rgba(253, 132, 32, 1);
  }

  span:hover {
    color: rgba(32, 49, 65, 1);
    background-color: white;
  }

  .button_container {
    padding-bottom: 45px;
  }
</style>
